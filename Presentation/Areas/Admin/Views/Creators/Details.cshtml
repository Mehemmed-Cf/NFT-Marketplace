@using Application.Modules.CreatorsModule.Queries.CreatorGetByIdQuery
@model CreatorGetByIdRequestDto
@{
    ViewData["Title"] = "Details";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Basic Form Inputs</h4>
                    <span>
                        Lorem ipsum dolor sit <code>amet</code>, consectetur
                        adipisicing elit
                    </span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="../index.html"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Form Components</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Form Components</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>


<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h5>Basic Form Inputs</h5>
                    <span>
                        Add class of <code>.form-control</code> with
                        <code>&lt;input&gt;</code> tag
                    </span>


                    <div class="card-header-right">
                        <i class="icofont icofont-spinner-alt-5"></i>
                    </div>

                </div>
                <div class="card-block">
                    <h4 class="sub-title">Basic Inputs</h4>
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-row">
                            <div class="col-7">
                                <div class="form-group">
                                    <label class="control-label" asp-for="NickName"></label>
                                    <p class="form-control">@Model.NickName</p>
                                </div>
                            </div>
                            <div class="col-5">
                                <div class="form-group d-flex justify-content-end">
                                    <img src="@Model.ImagePath" style="max-width: 100%; height: auto; block;" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label" asp-for="ChainId"></label>
                            <p class="form-control">@Model.ChainId</p>
                        </div>

                        <div class="form-group">
                            <label class="control-label" asp-for="Email"></label>
@*                             <p class="form-control">@Model.Email</p> *@
                            <div class="form-control">
                                @Html.Raw(Model.Email)
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="control-label" asp-for="Bio"></label>
@*                             <p class="form-control">@Html.Raw(Model.Bio)</p> *@
                            <div class="form-control">
                                @Html.Raw(Model.Bio)
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="control-label" asp-for="Followers"></label>
                            <p class="form-control">@Model.Followers</p>
                        </div>

                        <div class="form-group">
                            <label class="control-label" asp-for="Volume"></label>
                            <p class="form-control">@Model.Volume</p>
                        </div>

                        <div class="form-group">
                            <label class="control-label" asp-for="SoldNFts"></label>
                            <p class="form-control">@Model.SoldNFts</p>
                        </div>

                        <div class="form-group text-right m-0">
                            <input type="hidden" class="form-control" asp-for="Id">
                            <a class="btn btn-sm btn-warning" asp-action="edit" asp-route-id="@Model.Id">Edit</a>
                            <a class="btn btn-sm btn-primary" asp-action="index">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section addcss {
    <link rel="stylesheet" href="~/libs/single-image-chooser/single-image-chooser.css" />
}

@section addjs {
    <script src="~/libs/ckeditor5/ckeditor.min.js"></script>
    <script src="~/libs/single-image-chooser/single-image-chooser.js"></script>
    <script>
        $(document).ready(function () {

            $('#cover-image').singleImageChooser();

            ClassicEditor
                .create(document.querySelector('#body-editor'))
                .then(editor => { })
                .catch(error => { console.error(error); });

        });
    </script>
}