@using Application.Modules.CreatorsModule.Queries.CreatorGetByIdQuery
@model CreatorGetByIdRequestDto
@{
    ViewData["Title"] = "Edit";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Basic Form Inputs</h4>
                    <span>
                        Lorem ipsum dolor sit <code>amet</code>, consectetur
                        adipisicing elit
                    </span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="../index.html"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Form Components</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Form Components</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>


<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h5>Basic Form Inputs</h5>
                    <span>
                        Add class of <code>.form-control</code> with
                        <code>&lt;input&gt;</code> tag
                    </span>


                    <div class="card-header-right">
                        <i class="icofont icofont-spinner-alt-5"></i>
                    </div>

                </div>
                <div class="card-block">
                    <h4 class="sub-title">Basic Inputs</h4>
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-row">
                            <div class="col-7">

                                <div class="form-group">
                                    <label class="control-label" asp-for="NickName"></label>
                                    <input type="text" class="form-control" asp-for="NickName">
                                </div>

                                <div class="form-group">
                                    <label class="control-label" asp-for="ChainId"></label>
                                    <input type="text" class="form-control" asp-for="ChainId">
                                </div>

                                <div class="form-group">
                                    <label class="control-label" asp-for="Email"></label>
                                    <input type="email" class="form-control" asp-for="Email" />
                                </div>

                                <div class="form-group">
                                    <label class="control-label" asp-for="Followers"></label>
                                    <input type="number" class="form-control" asp-for="Followers" min="0" />
                                    <span asp-validation-for="Followers" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label class="control-label" asp-for="Volume"></label>
                                    <input type="number" class="form-control" asp-for="Volume" min="0" />
                                    <span asp-validation-for="Volume" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label class="control-label" asp-for="SoldNFts"></label>
                                    <input type="number" class="form-control" asp-for="SoldNFts" min="0" />
                                    <span asp-validation-for="SoldNFts" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label class="control-label" asp-for="TotalSales"></label>
                                    <input type="number" class="form-control" asp-for="TotalSales" min="0" step="0.01" />
                                    <span asp-validation-for="TotalSales" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="col-5">
                                <div class="form-group d-flex justify-content-end">
                                    <input name="ProfileImage" id="cover-image" type="file" class="d-none" data-image="@Model.ImagePath" accept="image/png, image/gif, image/jpeg" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label" asp-for="Bio"></label>
                            <textarea class="form-control" asp-for="Bio" id="body-editor"></textarea>
                        </div>

                        <div class="form-group text-right m-0">
                            <input type="hidden" class="form-control" asp-for="Id">
                            <a class="btn btn-sm btn-primary" asp-action="index">Cancel</a>
                            <button class="btn btn-sm btn-success">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section addcss {
    <link rel="stylesheet" href="~/libs/single-image-chooser/single-image-chooser.css" />
}

@section addjs {
    <script src="~/libs/ckeditor5/ckeditor.min.js"></script>
    <script src="~/libs/single-image-chooser/single-image-chooser.js"></script>
    <script>
        $(document).ready(function () {

            $('#cover-image').singleImageChooser();

            ClassicEditor
                .create(document.querySelector('#body-editor'))
                .then(editor => { })
                .catch(error => { console.error(error); });

        });
    </script>
}